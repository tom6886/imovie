extends ../layout
block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 电影名
                        th 导演
                        th 国家
                        th 语言
                        th 上映年份
                        th 简介
                        th 操作
                tbody
                    each item in movies
                        tr(class="item-id-#{item._id}")
                            td #{item.title}
                            td #{item.doctor}
                            td #{item.country}
                            td #{item.language}
                            td #{item.year}
                            td #{item.summary}
                            td
                                a.btn.btn-primary(href="/admin/#{item._id}") 更新
                                a.btn.btn-primary.del(href="javascript:void(0)",style="margin-Left:10px",data-id="#{item._id}") 删除
    script(src="/js/list.js")
